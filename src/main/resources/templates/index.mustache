{{>layout/header}}

<!-- 메인 콘텐츠 -->
<div class="content">
    <div class="container">
        <div class="row">
            <!-- 구역 1 (2분할 구조) -->
            <div class="col-md-6">
                <div class="row">
                    <!-- 카드 1 -->
                    <div class="col-md-6">
                        <div class="card card-xs">
                            <div class="card-body">
                                <h5 class="card-title">잔액</h5>
                                <p id="balance">불러오고 있어요!</p>
                            </div>
                        </div>
                    </div>
                    <!-- 카드 2 -->
                    <div class="col-md-6">
                        <div class="card card-xs">
                            <div class="card-body">
                                <h5 class="card-title">회비 입금 현황</h5>
                                <h6 class="card-text" id="date">00년 00월</h6>
                                <p class="card-text" id="paidMembers">입금자수/인원수</p>
                                <div class="progress-container">
                                    <div class="progress-bar-background">
                                        <div id="progress-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <span id="progress-label">0%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row mt-4">
            <!-- 구역 3 (카드 6) -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">모임 통장 전체 내역</h5>
                            <button id="view-all-transactions-button" class="btn btn-primary">전체보기</button>
                        </div>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>날짜</th>
                                <th>거래유형</th>
                                <th>카테고리</th>
                                <th>거래자</th>
                                <th>금액</th>
                                <th>잔액</th>
                            </tr>
                            </thead>
                            <tbody id="transaction-table-body">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- 구역 4 (카드 7) -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">회비 입금 명단</h5>
                        <div class="button-group mb-3">
                            <button id="paid-btn" class="btn btn-primary">입금자</button>
                            <button id="unpaid-btn" class="btn btn-secondary">미입금자</button>
                        </div>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>이름</th>
                                <th>금액</th>
                                <th>멤버쉽 유형</th>
                                <th>입금 여부</th>
                                <th>입금일</th>
                            </tr>
                            </thead>
                            <tbody id="membership-fee-report">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{{>layout/footer}}